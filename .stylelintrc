{
    "extends": "stylelint-config-recommended",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "each",
                    "else",
                    "extend",
                    "for",
                    "function",
                    "if",
                    "include",
                    "mixin",
                    "return",
                    "while"
                ]
            }
        ]
    }
}
